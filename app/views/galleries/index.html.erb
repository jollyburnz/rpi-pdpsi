padding: 0 25px;
float: left;
}

#gallery-index-right{
	background: none repeat scroll 0 0 #FFFFFF;
	border: 1px solid #DDDDDD;
	margin: 50px 0 0;
	padding: 20px;
}
</style>

<script>
	$(document).ready(function() {
		$("#gallery-carousel").carouFredSel({
			height				: 207,
			width				: 790,
			auto				: false,
			items				: 5,
			scroll : {
				items			: 1,
				effect			: "easeOutBounce",
				duration		: 1000,							
				pauseOnHover	: true
			},
			prev : {	
				button	: "#v2_prev",
				key		: "left"
			},
			next : { 
				button	: "#v2_next",
				key		: "right"
			}
		});				
	});	

</script>