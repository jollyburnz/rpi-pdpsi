<h1>New brother</h1>

<%#= render :partial => 'form' %>

<% form_for @brother, :url => roster_new_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
	<%= f.label :photo, "Photo" %><br/>
	<%= f.file_field :photo %>
  </p>

  <p>
    <%= f.label :pledge_class %><br />
    <%= f.text_field :pledge_class %>
  </p>

  <p>
    <%= f.label :pledge_name %><br />
    <%= f.text_field :pledge_name %>
  </p>

  <p>
    <%= f.label :crossing %><br />
    <%= f.text_field :crossing %>
  </p>

  <p>
    <%= f.label :ethnicity %><br />
    <%= f.text_field :ethnicity %>
  </p>

  <p>
    <%= f.label :hometown %><br />
    <%= f.text_field :hometown %>
  </p>

  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

<%= link_to 'Back', brothers_path %>