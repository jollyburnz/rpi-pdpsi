<h2>New event</h2>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
	<%= f.label :start_at %><br/>
	<%= f.datetime_select :start_at %>
  </p>

  <p>
	<%= f.label :end_at %><br/>
	<%= f.datetime_select :end_at %>
  </p>

  <p>
	<%= f.label :description %><br/>
	<%= f.text_area :description, :class => "mceEditor" %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
